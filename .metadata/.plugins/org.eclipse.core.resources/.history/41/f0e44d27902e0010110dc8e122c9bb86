# include "stm32f407xx_spi_driver.h"


void SPI_ClockControl(SPI_RegDef_t *pSPIx, uint8_t Enable_or_disable){
	if (Enable_or_disable==ENABLE){
			if (pSPIx == SPI1){
				SPI1_CLOCK_ENABLE();
			}else if (pSPIx == SPI2){
				SPI2_CLOCK_ENABLE();
			}else if (pSPIx == SPI3){
				SPI3_CLOCK_ENABLE();
			}
		}else{
			if (pSPIx == SPI1){
				SPI1_CLOCK_DISABLE();
			}else if (pSPIx == SPI2){
				SPI2_CLOCK_DISABLE();
			}else if (pSPIx == SPI3){
				SPI3_CLOCK_DISABLE();
			}
		}

}

void SPI_Init(SPI_Handle_t *pSPIHandle){

}
